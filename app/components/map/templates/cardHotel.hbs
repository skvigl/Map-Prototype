<div class="card card--hotel {{ modifierMarkerList}}" data-id="{{ id }}">
    <div class="card__figure">
        <img class="image-cover" src="{{imgURL}}" alt="">
        <div class="card__stars">
            {{#each stars}}
                <i class='fa fa-star'></i>
            {{/each}}
        </div>
    </div>
    <div class="card__content">
        <div class="card__heading">{{ title }}</div>
        <div class="card__summary">{{{ summary }}}</div>
    </div>
    <div class="card__footer">
        <a class="card__btn js-view-on-map" data-id="{{ id }}">View on map</a>
        <a class="card__btn" href="/to-hotel-page" target="_blank">Show more</a>
    </div>
</div>
