<div class="card card--poi is-visible {{ modifierMarkerList}} js-view" data-id="{{ id }}">
    <div class="card__figure">
        <img class="image-cover" src="{{imgURL}}" alt="">
    </div>
    <div class="card__content">
        <div class="card__heading">{{ title }}</div>
        <div class="card__summary">{{{ summary }}}</div>
    </div>
    <div class="card__footer">
        <a class="card__btn" href="/to-poi-page" target="_blank">Show more</a>
    </div>
</div>
